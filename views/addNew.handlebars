<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>SongMaker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  {{!-- <link rel="stylesheet" type="text/css" href="/assets/style.css"/> --}}
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary"><a href="/login"></a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a class="text-light nav-link active" href="/logout">Log out</a></li>
      <li class="nav-item"><a class="text-light nav-link active" href="/changePassword">Change Password</a></li>
      <li class="nav-item"><a class="text-light nav-link active" href="/share">Share</a></li>
      <li class="nav-item"><a class="text-light nav-link active" href="/addNew">Add New Song</a></li>
      <li class="nav-item"><a class="text-light nav-link active" href="/">View Songs</a></li>
    </ul>
    <form onsubmit="event.preventDefault();" id="searchTunesForm" action="/searchTunes" class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search iTunes" aria-label="Search" id="urlField" />
      <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
    </form>
  </nav>
  <section class="formFormat">
    <h2>Add a song</h2>
    <form id="songForm" name="songForm" action="/maker" method="POST" class="pageForm">
    <div class="form-group">
      <label for="name">Name: </label>
      <input class="form-control" id="songName" type="text" name="name" placeholder="Song Name"/>
    </div>
    <div class="form-group">
      <label for="artist">Artist: </label>
      <input class="form-control" id="songArtist" type="text" name="artist" placeholder="Song Artist"/>
    </div>
    <div class="form-group">
      <label for="album">Album: </label>
      <input class="form-control" id="songAlbum" type="text" name="album" placeholder="Song Album"/>
    </div>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="btn btn-primary" type="submit" value="Make Song" />
    </form>
    <div id="errorMessage"></div>
  </section>
