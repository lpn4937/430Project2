<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>DomoMaker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  {{!-- <link rel="stylesheet" type="text/css" href="/assets/style.css"/> --}}
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css"/>
</head>
<body>
  <nav class="navbar">
    <div class="navlink"><a href="/deleteAccount">Delete Account</a></div>
  </nav>
  <section id="changePassword">
    <form class="form" id="changePasswordForm" name="changePasswordForm" action="/changePassword" method="POST" class="mainForm">
      <label for="currentPass">Current Password: </label>
      <input id="current" type="password" name="currentPass" placeholder="currentPass"/>
      <label for="pass">New password: </label>
      <input id="pass" type="password" name="pass" placeholder="password"/>
      <label for="pass2">New Password: </label>
      <input id="pass2" type="password" name="pass2" placeholder="retype password"/>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="formSubmit" type="submit" value="Sign Up" />
    </form>
  </section>
  <div id="domoMessage"><img id="speech" src="/assets/img/speech.png" alt="speech box"/>
    <h3><span id="errorMessage"></span></h3><img id="domo" src="assets/img/domo.png" alt="domo"/>
  </div>
  <script src="/assets/bundle.js"></script>
</body>
</html>