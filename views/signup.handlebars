<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>SongMaker</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  {{!-- <link rel="stylesheet" type="text/css" href="/assets/style.css"/> --}}
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap.css"/>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary"><a href="/login"></a>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a class="text-light nav-link active" href="/login">Log in</a></li>
      <li class="nav-item"><a class="text-light nav-link active" href="/signup">Sign up</a></li>
    </ul>
    <form onsubmit="event.preventDefault();" id="searchTunesForm" action="/searchTunes" class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search iTunes" aria-label="Search" id="urlField" />
      <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
    </form>
  </nav>
  <section class="formFormat">
    <form id="signupForm" name="signupForm" action="/signup" method="POST" class="mainForm">
      <div class="form-group">
        <label for="username">Username: </label>
        <input class="form-control" id="user" type="text" name="username" placeholder="Username"/>
      </div>
      <div class="form-group">
        <label for="pass">Password: </label>
        <input class="form-control" id="pass" type="password" name="pass" placeholder="Password"/>
      </div>
      <div class="form-group">
        <label for="pass2">Password: </label>
        <input class="form-control" id="pass2" type="password" name="pass2" placeholder="Retype Password"/>
      </div>
      <input type="hidden" name="_csrf" value={{csrfToken}} />
      <input class="formSubmit btn btn-primary" type="submit" value="Sign Up" />
      <div id="errorMessage"></div>
    </form>
  </section>
  <script src="/assets/bundle.js"></script>
</body>
</html>